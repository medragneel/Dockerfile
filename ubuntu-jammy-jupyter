FROM ubuntu:jammy
RUN apt-get update && apt-get install -y \
    python3 \
    python3-dev \
    python3-pip
RUN pip3 install\
      --upgrade pip\
        virtualenv
WORKDIR  /home/
WORKDIR /home/notebook/
RUN  virtualenv jupyterenv
RUN pip3 install jupyter
CMD ["jupyter", "notebook", "--port=8888", "--no-browser", "--ip=0.0.0.0", "--allow-root"]

